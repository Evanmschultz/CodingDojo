<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500&display=swap"
			rel="stylesheet"
		/>

		<title>Checkerboard</title>
		<link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='css/style.css') }}">
	</head>
	<body>
        <header class="header">
            <div class="title">
                <h1>Checkerboard</h1>
            </div>
            
            <div class="counter">
                <p>Rows: {{ y_total }}</p>
                <p>Columns: {{ x_total }}</p>
            </div>
        </header>
        <main>
            {% for num_1 in range(y_total) %}
                <div class="row">
                {% for num_2 in range(x_total) %}
                    {% if (num_1 + num_2) % 2 == 0 %}
                        <div class="box" style="background-color: {{ color_1 }};"></div>
                    {% else %}
                        <div class="box" style="background-color: {{ color_2 }};"></div>
                    {% endif %}
                {% endfor %}

                </div>
            {% endfor %}
        </main>
	</body>
</html>
